---
import "../styles/style.css"
const {insta_link, cta_text} = Astro.props;
---
<article>
    <div>
        <slot class="ca_logo" />
    </div>
    <div class="insta_logo_container">
        <a class="instagram_link_stacked" href="#"><img class="insta_logo" src="insta_logo.png" alt=""> <p>{insta_link}</p></a>
        <p class="cta_text">{cta_text}</p>
    </div>
</article>

<style>

    article{
        display: flex;
        flex-direction: row;
        justify-content: center;
        gap: 10px;
        width: 355px;
    }

    img{
        width: 100px;
    }

    .insta_logo_container{
        display: flex;
        justify-content: space-around;
        background-color: #e7f0f7;
        border-radius: 20px;
        gap: 20px;
        padding: 10px;
    }

    a{
        display: flex;
        flex-direction: column;
        align-items: center;
        font-size: 20px;
        text-decoration: none;
    }

    .insta_logo{
        height: 70%;
    }

    @media only screen and (min-width: 600px) {
    article{
    width: 500px;
    }
    .cta_text{
        margin-top: 10px;
    }
}

@media only screen and (min-width: 1166px) {
    article{
        width: 600px;
    }
}
</style>