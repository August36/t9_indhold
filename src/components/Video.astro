---
import "../styles/style.css"
---
<article>
    <iframe src="https://www.youtube.com/watch?v=EciZT1wr0aQ&list=PL9IXyRq5lBDs-bL95L_1_wvS7MgVKRH7r&index=2" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
    </iframe>
</article>

<style>
    iframe{
        width: 355px;
        height: 400px;
    }

    article{
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    @media only screen and (min-width: 600px) {

    iframe{
        width: 699px;
        height: 400px;
    }
}

@media only screen and (min-width: 1166px) {
    iframe{
        width: 800px;
        height: 400px;
    }
}
</style>